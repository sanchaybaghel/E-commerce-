{
  "name": "e-commerce-platform",
  "version": "1.0.0",
  "description": "A full-stack e-commerce application built with React, Node.js, and MongoDB",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanchaybaghel/E-commerce-.git"
  },
  "keywords": [
    "ecommerce",
    "react",
    "nodejs",
    "mongodb",
    "stripe",
    "firebase",
    "tailwindcss",
    "full-stack"
  ],
  "author": "Sanchay Baghel <sanchaybaghel92@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sanchaybaghel/E-commerce-/issues"
  },
  "homepage": "https://github.com/sanchaybaghel/E-commerce-#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
